<h1><%= @cocktail.name %></h1>
<img src=<%= cl_image_path(@cocktail.photo,width: 400, height: 300, crop: :fill)%>>
<h5>Cocktail ingredients</h5>
<ul>
  <% @doses.each do |dose| %>
  <li><%= "#{dose.description} - #{dose.ingredient.name}"  %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
    <% end %>
  </li>
  <% end %>
</ul>
<%= link_to "back to Cocktail List" , cocktails_path  %>
<%= link_to "Add ingredients" , new_cocktail_dose_path(@cocktail)  %>
