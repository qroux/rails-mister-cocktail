<h1><%= @cocktail.name %></h1>
<h4>Cocktail ingredients</h4>
<ul>
  <% @doses.each do |dose| %>
  <li><%= "#{dose.description} - #{dose.ingredient.name}"  %></li>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
  <i class="fa fa-trash destroy_dose"></i>
  <% end %>
  <% end %>
</ul>
<%= link_to "back to Cocktail List" , cocktails_path  %>
<%= link_to "Add ingredients" , new_cocktail_dose_path(@cocktail)  %>
